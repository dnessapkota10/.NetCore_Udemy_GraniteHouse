@model GraniteHouse.Models.ViewModel.ProductViewModel
@using GraniteHouse.Extensions   @*To be able to use extension method*@
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create Product</h2>

<form method="post" enctype="multipart/form-data" asp-action="Create"> <!--enctype for image-->
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Name" class="form-control" />
            </div>
            <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="Product.Price" class="form-control" />
            </div>
            <span asp-validation-for="Product.Price" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Product.Image"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ProductTypes"></label>
            </div>
            <div class="col-5">
                <!--Adding drop down list using Extensions method- IEnumerableExtensions.ToSelectListItem -->
                <select asp-for="@Model.Product.ProductTypeId" asp-items="Model.ProductTypes.ToSelectListItem(Model.Product.ProductTypeId)" class="form-control"></select>
            </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Product.ShadeColor"></label>
        </div>
        <div class="col-5">
            <input asp-for="Product.ShadeColor" class="form-control" />
        </div>
        <span asp-validation-for="Product.ShadeColor" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Product.Available"></label>
        </div>
        <div class="col-5">
            <input type="checkbox" asp-for="Product.Available" />
        </div>
    </div>

    <br />

    <!--Lets add 2 buttons-->
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="Create" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
</form>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}  <!--Views/Shared/_ValidationScriptsPartial.cshtml-->
}