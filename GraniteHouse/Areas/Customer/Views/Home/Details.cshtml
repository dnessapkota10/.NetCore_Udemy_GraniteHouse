@model GraniteHouse.Models.Product
@using GraniteHouse.Extensions   @*To be able to use extension method*@

<br />
<h2 class="text-info">Product Details</h2>

<form method="post" asp-action="Details">
    <!--enctype for image-->
    <div class="p-4 border rounded row">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ProductTypes"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ProductTypes.Name" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="ShadeColor"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ShadeColor" readonly class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4"></div>
                <div class="col-8">
                    <button type="submit" value="Add to Bag" asp-route-id="@Model.Id" class="btn btn-primary form-control">Add to Bag</button>
                </div>
            </div>

        </div> <!--col-8-->

        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
            <br /> <br />
            @if (Model.Available)
            {
                <img src="~/images/inStock.jpg" width="50%" />
            }
        </div>
        <br />

        <!--Lets add 2 buttons-->
        <div class="form-group">
            <input hidden asp-for="Id"/>
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

